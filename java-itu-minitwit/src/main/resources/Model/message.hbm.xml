<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Model.Message" table="Message">
        <id name="id" type="int" column="id">
            <generator class="assigned"/>
        </id>
        <property type="int" name="authorId">
            <column name="authorId"/>
        </property>
        <property name="text">
            <column name="text"/>
        </property>
        <property type="long" name="pubDate">
            <column name="pubDate"/>
        </property>
        <property type="int" name="flagged">
            <column name="flagged"/>
        </property>
    </class>
</hibernate-mapping>